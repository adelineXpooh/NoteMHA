<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemContainer"
    android:padding="@dimen/margin_side_M">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFileName"
        android:text="Test.3gp"
        android:textSize="@dimen/text_size_M"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDate"
        android:text="04-02-2022"
        android:textSize="@dimen/text_size_M"
        app:layout_constraintTop_toBottomOf="@id/tvFileName"
        app:layout_constraintStart_toStartOf="parent"
        app:drawableStartCompat="@drawable/ic_date"
        android:drawablePadding="@dimen/margin_side_XS"
        android:layout_marginTop="@dimen/margin_side_XS"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDuration"
        android:text="1min 30 sec"
        android:textSize="@dimen/text_size_M"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="parent"
        app:drawableStartCompat="@drawable/ic_time"
        android:drawablePadding="@dimen/margin_side_XS"
        android:layout_marginTop="@dimen/margin_side_XS"/>


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnPlay"
        android:src="@drawable/selector_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/margin_side_XS"/>

</androidx.constraintlayout.widget.ConstraintLayout>